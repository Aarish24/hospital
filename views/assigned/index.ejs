<%- include('../partials/header') %>
<%- include('../partials/navbar') %>

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2><i class="fas fa-bed"></i> Room Assignments</h2>
        <a href="/api/assigned/view/add" class="btn btn-primary">
            <i class="fas fa-plus"></i> Assign Room
        </a>
    </div>

    <div class="card">
        <div class="card-body">
            <% if (assignments && assignments.length > 0) { %>
                <div class="table-responsive">
                    <table class="table table-striped table-hover">
                        <thead>
                            <tr>
                                <th>Room ID</th>
                                <th>Room Type</th>
                                <th>Patient</th>
                                <th>Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            <% assignments.forEach(assignment => { %>
                                <tr>
                                    <td><%= assignment.r_id %></td>
                                    <td><%= assignment.roomtype %></td>
                                    <td><%= assignment.patientname %></td>
                                    <td>
                                        <div class="btn-group" role="group">
                                            <a href="/api/assigned/view/edit/<%= assignment.r_id %>" class="btn btn-sm btn-warning btn-action">
                                                <i class="fas fa-edit"></i>
                                            </a>
                                            <button class="btn btn-sm btn-danger btn-action delete-btn" data-delete-url="/api/assigned/<%= assignment.r_id %>">
                                                <i class="fas fa-trash"></i>
                                            </button>
                                            <a href="/api/patients/<%= assignment.p_id %>" class="btn btn-sm btn-info btn-action">
                                                <i class="fas fa-user-injured"></i>
                                            </a>
                                            <a href="/api/rooms/<%= assignment.r_id %>" class="btn btn-sm btn-success btn-action">
                                                <i class="fas fa-door-open"></i>
                                            </a>
                                        </div>
                                    </td>
                                </tr>
                            <% }); %>
                        </tbody>
                    </table>
                </div>
            <% } else { %>
                <div class="alert alert-info">
                    No room assignments found. <a href="/api/assigned/view/add">Assign a room</a>.
                </div>
            <% } %>
        </div>
    </div>
</div>

<%- include('../partials/footer') %>