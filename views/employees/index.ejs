<%- include('../partials/header') %>
<%- include('../partials/navbar') %>

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2><i class="fas fa-user-md"></i> Employees</h2>
        <a href="/api/employees/view/add" class="btn btn-primary">
            <i class="fas fa-plus"></i> Add New Employee
        </a>
    </div>

    <div class="card">
        <div class="card-body">
            <% if (employees && employees.length > 0) { %>
                <div class="table-responsive">
                    <table class="table table-striped table-hover">
                        <thead>
                            <tr>
                                <th>ID</th>
                                <th>Name</th>
                                <th>Role</th>
                                <th>Gender</th>
                                <th>Salary</th>
                                <th>Mobile Number</th>
                                <th>Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            <% employees.forEach(employee => { %>
                                <tr>
                                    <td><%= employee.e_id %></td>
                                    <td><%= employee.name %></td>
                                    <td><%= employee.role %></td>
                                    <td><%= employee.gender %></td>
                                    <td><%= employee.salary %></td>
                                    <td><%= employee.mob_no %></td>
                                    <td>
                                        <div class="btn-group" role="group">
                                            <a href="/api/employees/view/edit/<%= employee.e_id %>" class="btn btn-sm btn-warning btn-action">
                                                <i class="fas fa-edit"></i>
                                            </a>
                                            <button class="btn btn-sm btn-danger btn-action delete-btn" data-delete-url="/api/employees/<%= employee.e_id %>">
                                                <i class="fas fa-trash"></i>
                                            </button>
                                            <% if (employee.role === 'Doctor') { %>
                                                <a href="/api/doctors/<%= employee.e_id %>" class="btn btn-sm btn-info btn-action">
                                                    <i class="fas fa-stethoscope"></i>
                                                </a>
                                            <% } %>
                                        </div>
                                    </td>
                                </tr>
                            <% }); %>
                        </tbody>
                    </table>
                </div>
            <% } else { %>
                <div class="alert alert-info">
                    No employees found. <a href="/api/employees/view/add">Add a new employee</a>.
                </div>
            <% } %>
        </div>
    </div>
</div>

<%- include('../partials/footer') %>